{{ attach_library('adaptive/adaptive.usluga') }}
{{ attach_library('adaptive/adaptive.lp2') }}
<section id="hero">
    <div class="hero-inner custom-messages" style="background-image:url({{ main_image_url }})">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div class="hero-inner__description">
                        {{ label }}
                        {{ content.field_short }}
                        {{ content.field_usluga_sostav }}
                    </div>
                </div>
                <div class="col-lg-4 offset-lg-1">
                    {{ form_order }}
                </div>
            </div>
        </div>
    </div>
    <a href="/#about" data-action="scroll" class="hero-arrow">
        <i class="fa fa-angle-double-down" aria-hidden="true"></i>
    </a>
</section>
<section id="about">
    <div class="container">
        <div class="row">
          <div class="about-blocks">
            {% for block in usluga.blocks %}
                <div class="col-lg-4 col-md-6 text-xs-center text-center wow flipInY animated">
                    <div class="about-box">
                        <div class="about-box__icon">
                            <i class="fa fa-{{ block.icon }}" aria-hidden="true"></i>
                        </div>
                        <div class="about-box__title">
                            {{ block.title }}
                        </div>
                        <div class="about-box__description">
                            {{ block.text }}
                        </div>
                    </div>
                </div>
            {% endfor %}
          </div>
        </div>
    </div>
</section>
{% if content.body.0 or content.field_attach.0 %}
  <section id="services">
      <div class="big-title">
          Услуги
      </div>
      <div class="container">
          <div id="main-content" class="row">
              <div id="content-area" class="col-xs-12 col-lg-10 offset-lg-1">
                  <article{{ attributes.addClass('node-content-wrapper') }}>
                      {{ title_prefix }}
                      {{ title_suffix }}
                      <div class="content">
                          {{ content.body }}
                          {{ content.field_attach }}
                      </div>
                  </article>
              </div>
          </div>
      </div>
  </section>
{% endif %}
{% if content.field_gallery.0 %}
  <section id="gallery">
      <div class="big-title">
          Галерея
      </div>
      <div class="container">
          {{ content.field_gallery }}
      </div>
  </section>
{% endif %}
